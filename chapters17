// dont forget this if , or you will suffer :)
if( t1.getType() == 'teleporter' && t2.getType() =='teleporter'){ 
        var ctx = map.getCanvasContext();
        ctx.beginPath();
        ctx.strokeStyle = 'white';
        ctx.lineWidth = 1; // because 5 if to muche
        ctx.moveTo(map.getCanvasCoords(t1).x, map.getCanvasCoords(t1).y);
        ctx.lineTo(map.getCanvasCoords(t2).x, map.getCanvasCoords(t2).y);
        ctx.stroke();
}

